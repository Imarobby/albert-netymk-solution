! fc-list to see all the available fonts
UXTerm*faceName: DejaVu Sans Mono
UXTerm*faceNameDoublesize: WenQuanYi Zen Hei:size=10
UXTerm.VT100.geometry: 84x20

UXTerm.VT100.translations: #override \
		Ctrl <Key> minus: smaller-vt-font() \n\
		Ctrl <Key> plus: larger-vt-font() \n\

! The above shortcut will loop through the following font size
UXTerm*faceSize: 10
UXTerm*faceSize1: 6
UXTerm*faceSize2: 10
UXTerm*faceSize3: 13
UXTerm*faceSize4: 16
UXTerm*faceSize5: 20
UXTerm*faceSize6: 24


! <F7> to insert content from clipboard
UXTerm*VT100.translations: #override <Key>F7:insert-selection(CLIPBOARD)
! By default, middle click will insert content from selection PRIMARY
! Solarized color
